public class LinkedInChannel extends Channel {
    private boolean professionalPage;
    private int maxMediaItems;

    public LinkedInChannel(String channelId, int rateLimitPerHour) {
        super(channelId, "LinkedIn", rateLimitPerHour);
        this.professionalPage = true;
        this.maxMediaItems = 5;
    }

    @Override
    public boolean validate(Post post) {
        if (!isEnabled()) return false;
        if (post.getContent().length() < 5) return false;
        return true;
    }

    @Override
    public boolean publish(Post post) {
        if (!canSendNow()) return false;
        try { Thread.sleep(150); } catch (InterruptedException e) {}
        recordSend();
        post.setStatus(Post.Status.PUBLISHED);
        return true;
    }

    public boolean isProfessionalPage() { return professionalPage; }
    public void setProfessionalPage(boolean val) { this.professionalPage = val; }
}